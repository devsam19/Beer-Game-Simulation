<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context="com.example.sanjatmishra.newbeergame.InputActivity">





        <TextView
            android:id="@+id/initinp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FEFEFE"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="@string/ipthead"
            android:layout_marginLeft="15dp"
            tools:ignore="HardcodedText" />


        <TextView

            android:id="@+id/numweeks"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            android:text="Weeks"
            android:textColor="#FEFEFE"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/initinp" />

        <EditText
            android:id="@+id/weeks"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:width="100dp"
            android:inputType="number"
            android:backgroundTint="#FEFEFE"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#FEFEFE"
            app:layout_constraintLeft_toRightOf="@+id/numweeks"
            app:layout_constraintTop_toBottomOf="@id/initinp" />

        <TextView

            android:id="@+id/lowb"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:padding="10dp"
            android:text="Lower Bound"
            android:textColor="#FEFEFE"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/numweeks" />

        <EditText
            android:id="@+id/lbound"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:width="100dp"
            android:inputType="number"
            android:backgroundTint="#FEFEFE"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#FEFEFE"
            app:layout_constraintLeft_toRightOf="@+id/lowb"
            app:layout_constraintTop_toBottomOf="@id/numweeks" />

        <TextView

            android:id="@+id/upb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FEFEFE"
            android:textSize="20sp"
            android:text="Upper Bound"
            android:padding="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/lowb"
            android:layout_marginLeft="50dp"
            />

        <EditText
            android:id="@+id/ubound"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:width="100dp"
            android:inputType="number"
            android:backgroundTint="#FEFEFE"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#FEFEFE"
            app:layout_constraintLeft_toRightOf="@+id/upb"
            app:layout_constraintTop_toBottomOf="@id/lowb" />

        <TextView

            android:id="@+id/stockR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FEFEFE"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="Retailer Stock"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/upb"
            android:layout_marginLeft="50dp"
            />

        <EditText
            android:id="@+id/stockRet"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:width="100dp"
            android:inputType="number"
            android:backgroundTint="#FEFEFE"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#FEFEFE"
            app:layout_constraintLeft_toRightOf="@+id/upb"
            app:layout_constraintTop_toBottomOf="@id/ubound" />

        <TextView

            android:id="@+id/stockW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FEFEFE"
            android:textSize="20sp"
            android:padding="10dp"
            android:text="Wholesaler Stock"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/stockR"
            android:layout_marginLeft="50dp"
            />

        <EditText
            android:id="@+id/stockWhole"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:inputType="number"
            android:layout_marginLeft="4dp"
            android:width="100dp"
            android:backgroundTint="#FEFEFE"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#FEFEFE"
            app:layout_constraintLeft_toRightOf="@+id/stockW"
            app:layout_constraintTop_toBottomOf="@id/stockRet" />

        <TextView

            android:id="@+id/stockD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FEFEFE"
            android:textSize="20sp"
            android:padding="10dp"
            android:text="Distributor Stock"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/stockW"
            android:layout_marginLeft="50dp"
            />

        <EditText
            android:id="@+id/stockDis"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:inputType="number"
            android:layout_marginLeft="4dp"
            android:width="100dp"
            android:backgroundTint="#FEFEFE"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#FEFEFE"
            app:layout_constraintLeft_toRightOf="@+id/stockD"
            app:layout_constraintTop_toBottomOf="@id/stockWhole" />


        <TextView

            android:id="@+id/stockF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FEFEFE"
            android:textSize="20sp"
            android:padding="10dp"
            android:text="Factory Stock"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/stockD"
            android:layout_marginLeft="50dp"
            />

        <EditText
            android:id="@+id/stockFac"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginLeft="4dp"
            android:width="100dp"
            android:inputType="number"
            android:backgroundTint="#FEFEFE"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#FEFEFE"
            app:layout_constraintLeft_toRightOf="@+id/stockF"
            app:layout_constraintTop_toBottomOf="@id/stockDis" />


        <TextView

            android:id="@+id/RandomIncDemand"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            android:text="Random Increase in Demand"
            android:textColor="#FEFEFE"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/stockF" />

        <EditText
            android:id="@+id/Randinc"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="4dp"
            android:width="100dp"
            android:inputType="number"
            android:backgroundTint="#FEFEFE"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#FEFEFE"
            app:layout_constraintLeft_toRightOf="@+id/RandomIncDemand"
            app:layout_constraintTop_toBottomOf="@id/stockFac" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintRight_toLeftOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           android:text="START"
           android:onClick="clickedplay"
           android:minWidth="88dp"
           android:height="36dp"
           android:background="#2196F3"
           style="@style/AppTheme.RoundedCornerMaterialButton"
           />


</android.support.constraint.ConstraintLayout>
