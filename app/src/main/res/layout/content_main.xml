<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_vit_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sanjatmishra.newbeergame.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sjt"
        android:scaleType="centerCrop"

        />



    <TextView
        android:id="@+id/welco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="396dp"
        android:layout_marginLeft="60dp"
        android:text="@string/welcomeText"
        android:textColor="#212121"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/playbt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/playbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicknext"
        android:text="@string/playbt"
        android:background="#9E9E9E"
        android:textColor="#212121"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/welco"
        app:layout_constraintVertical_bias="0.965" />

</android.support.constraint.ConstraintLayout>
